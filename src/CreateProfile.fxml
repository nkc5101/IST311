<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="LoginViewController" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
 
<Label text="Username"
    GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
<TextField fx:id="newUsernameField"
    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
 
<Label text="Password:"
    GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
<PasswordField fx:id="newPasswordField" 
    GridPane.columnIndex="1" GridPane.rowIndex="2"/>

<Label text="Re-enter Password:"
       GridPane.columnIndex="0" GridPane.rowIndex="3"/>

<PasswordField fx:id="reEnterPasswordField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

<Label text="Email:"
       GridPane.columnIndex="0" GridPane.rowIndex="4"/>

<TextField fx:id="emailField"
    GridPane.columnIndex="1" GridPane.rowIndex="4"/> 

<Label text="Name:"
       GridPane.columnIndex="0" GridPane.rowIndex="5"/>

<TextField fx:id="nameField"
    GridPane.columnIndex="1" GridPane.rowIndex="6"/>

<Label text="Phone Number:"
       GridPane.columnIndex="0" GridPane.rowIndex="7"/>

<TextField fx:id="phoneNumberField"
    GridPane.columnIndex="1" GridPane.rowIndex="7"/>

<Label text="Career Choice:"
       GridPane.columnIndex="0" GridPane.rowIndex="8"/>

<TextField fx:id="careerChoiceField"
    GridPane.columnIndex="1" GridPane.rowIndex="8"/>

<Label text="Address:"
       GridPane.columnIndex="0" GridPane.rowIndex="9"/>

<TextField fx:id="addressField"
    GridPane.columnIndex="1" GridPane.rowIndex="9"/>  


<HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="10">
        <Button text="Create Profile"     
        onAction="#handleProfileCreation"/>
        
</HBox>



</GridPane>
